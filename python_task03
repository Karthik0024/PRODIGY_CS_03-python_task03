import re

def check_password_strength(password):
    # Criteria for a strong password
    length_criteria = len(password) >= 8
    digit_criteria = re.search(r"\d", password) is not None
    uppercase_criteria = re.search(r"[A-Z]", password) is not None
    lowercase_criteria = re.search(r"[a-z]", password) is not None
    special_character_criteria = re.search(r"[@#$%^&+=]", password) is not None
    
    # Count the number of criteria met
    criteria_met = sum([length_criteria, digit_criteria, uppercase_criteria, lowercase_criteria, special_character_criteria])
    
    # Determine password strength
    if criteria_met == 5:
        strength = "Very Strong"
    elif criteria_met == 4:
        strength = "Strong"
    elif criteria_met == 3:
        strength = "Moderate"
    elif criteria_met == 2:
        strength = "Weak"
    else:
        strength = "Very Weak"
    
    # Print criteria and results
    print(f"Password Length (>=8): {length_criteria}")
    print(f"Contains Digit: {digit_criteria}")
    print(f"Contains Uppercase: {uppercase_criteria}")
    print(f"Contains Lowercase: {lowercase_criteria}")
    print(f"Contains Special Character (@#$%^&+=): {special_character_criteria}")
    print(f"Password Strength: {strength}")

# Take password input from the user
password = input("Enter your password: ")
check_password_strength(password)
